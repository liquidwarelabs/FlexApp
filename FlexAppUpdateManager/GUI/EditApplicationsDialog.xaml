<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Applications Before Export" 
        Height="600" 
        Width="900"
        MinHeight="400"
        MinWidth="750"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Background="{DynamicResource PrimaryBackgroundBrush}">
    
    <Window.Resources>
        <!-- Styles for consistent appearance -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="Margin" Value="5,10,5,5"/>
        </Style>
        
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5,2"/>
        </Style>
        
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBackgroundBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource SecondaryTextBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="AppGroupStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SecondaryBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5,3"/>
            <Setter Property="Padding" Value="10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryButtonBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryTextBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource SecondaryButtonHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ContinueButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource PrimaryButtonBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonHoverBrush}"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="{DynamicResource PrimaryButtonPressedBrush}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryButtonPressedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="Background" Value="#E74C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C0392B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C0392B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SecondaryButtonBrush}" Padding="15,10">
            <TextBlock Text="Edit the Name, Version, Installer, and Installer Arguments for each application before export"
                       Foreground="White"
                       FontSize="13"
                       FontWeight="SemiBold"
                       TextWrapping="Wrap"/>
        </Border>
        
        <!-- Applications List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="10">
            <ItemsControl Name="ApplicationsItemsControl" ItemsSource="{Binding Applications}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource AppGroupStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Application Header -->
                                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                                           Text="{Binding DisplayHeader}"
                                           Style="{StaticResource HeaderTextStyle}"/>
                                
                                <!-- Name -->
                                <Label Grid.Row="1" Grid.Column="0" 
                                       Content="Name:" 
                                       Style="{StaticResource LabelStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         ToolTip="Application display name"/>
                                
                                <!-- Version -->
                                <Label Grid.Row="2" Grid.Column="0" 
                                       Content="Version:" 
                                       Style="{StaticResource LabelStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="{Binding Version, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         ToolTip="Application version number"/>
                                
                                <!-- Installer -->
                                <Label Grid.Row="3" Grid.Column="0" 
                                       Content="Installer:" 
                                       Style="{StaticResource LabelStyle}"/>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0"
                                             Text="{Binding Installer, UpdateSourceTrigger=PropertyChanged}"
                                             Style="{StaticResource InputTextBoxStyle}"
                                             ToolTip="Path to installer executable"/>
                                    <Button Grid.Column="1"
                                            Content="Browse..."
                                            Padding="8,2"
                                            Margin="5,2,0,2"
                                            Name="BrowseInstallerButton"
                                            Tag="{Binding}"
                                            ToolTip="Browse for installer file"/>
                                </Grid>
                                
                                <!-- Installer Args -->
                                <Label Grid.Row="4" Grid.Column="0" 
                                       Content="Installer Args:" 
                                       Style="{StaticResource LabelStyle}"/>
                                <TextBox Grid.Row="4" Grid.Column="1" 
                                         Text="{Binding InstallerArgs, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource InputTextBoxStyle}"
                                         ToolTip="Command line arguments for installer"
                                         AcceptsReturn="False"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="{DynamicResource PrimaryBackgroundBrush}" Padding="15,10">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Name="CancelButton"
                        Content="Cancel"
                        Style="{StaticResource CancelButtonStyle}"
                        IsCancel="True"/>
                <Button Name="ContinueButton"
                        Content="Continue Export"
                        Style="{StaticResource ContinueButtonStyle}"
                        IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
